{
  "title": "User Account",
  "description": "Blueprint for user accounts used for authentication and access. Fields are aligned with the core user data model.",
  "sections": [
    {
      "sectionTitle": "Account Details",
      "fields": [
        {
          "name": "username",
          "label": "Username",
          "type": "text",
          "placeholder": "Enter your unique username",
          "required": true,
          "description": "The user's chosen username."
        },
        {
          "name": "email",
          "label": "Email Address",
          "type": "email",
          "placeholder": "e.g., jane.doe@example.com",
          "required": true,
          "description": "The user's email address."
        },
        {
          "name": "password",
          "label": "Password",
          "type": "password",
          "placeholder": "Create a secure password",
          "required": true,
          "description": "The user's password."
        }
      ]
    },
    {
      "sectionTitle": "Relationship",
      "description": "Links the user account to a specific person entity.",
      "fields": [
        {
          "name": "personId",
          "label": "Person ID",
          "type": "string",
          "description": "Foreign key to the corresponding person's biographical profile. This field is typically managed by the system."
        }
      ]
    }
  ]
}
